---
enum Type {
  "security" = "security",
  "money" = "money",
  "idea" = "idea",
}
interface Props {
  type: Type;
  children: any;
}
const props: Props = Astro.props;

const color = () => {
  switch (props.type) {
    case Type.security:
      return ["dark:bg-pink-900", "bg-pink-200"];
    case Type.money:
      return ["dark:bg-green-900", "bg-green-200"];
    case Type.idea:
      return ["dark:bg-blue-900", "bg-blue-200"];
    default:
      throw new Error(`Invalid Callout type: ${props.type}`);
  }
};

