---
import BaseHead from "../components/BaseHead.astro";
import Body from "./Body.astro";

const { title, description, image } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>

  <Body>
    <main>
      <slot />
    </main>
  </Body>
</html>
